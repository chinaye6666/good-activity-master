.enroll{
  padding: 0 30rpx;
}

.enroll-item{
  width: 100%;
  padding: 30rpx 0;
  display: inline-block;
}

.enroll-item + .enroll-item{
  border-top: 1rpx #ededed solid;
}

.enroll-img{
  width: 95rpx;
  float: left;
  margin-right: 30rpx;
}

.enroll-img image{
  width: 95rpx;
  height: 95rpx;
  border-radius: 5rpx;
}

.enroll-wrap{
  width: 570rpx;
  float: left;
}

.enroll-tit{
  font-size: 32rpx;
  color: #333;
  width: 100%;
  height: 95rpx;
  line-height: 45rpx;
  overflow: hidden;
}

.enroll-body{
  width: 100%;
  display: inline-block;
  position: relative;
}

.enroll-l{
  width: 410rpx;
  float: left;
}

.enroll-p{
  width: 100%;
  color: #b5b5b5;
  font-size: 30rpx;
  line-height:45rpx;

}

.enroll-spna{
  display: inline-block;
}
.enroll-spna + .enroll-spna{ 
  margin-left: 30rpx;
}

.enroll-i{
  color: #8b353e;
  display: inline-block;
}

.enroll-d{
  color: #000;
  display: inline-block;
}

.enroll-r{
  width: 160rpx;
  position: absolute;
  right: 0;
  bottom: 0;
}

.time{
  width: 100%;
  color: #b5b5b5;
  font-size: 30rpx;
  text-align: center;
}

.but{
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 24rpx;
  color: #fff;
  background: #05c0af;
  border-radius: 5rpx;
  margin-top: 20rpx;
}